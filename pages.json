{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/tabBar/Home",
            "style": {
                "navigationBarTitleText": "Uni App"
            }
        }, {
            "path": "pages/tabBar/DemoList",
            "style": {
                "navigationBarTitleText": "Demo List",
                "enablePullDownRefresh": false
            }
        }
    ],
    "subPackages": [{
        "root": "pages/demoList",
        "pages": [{
            "path": "NumberCount",
            "style": {
                "navigationBarTitleText": "计数器",
                "enablePullDownRefresh": true
            }
        }, {
            "path": "todoList/TodoList",
            "style": {
                "navigationBarTitleText": "待办事项",
                "enablePullDownRefresh": true
            }
        }, {
            "path": "CustomTabs",
            "style": {
                "navigationBarTitleText": "底部菜单",
                "enablePullDownRefresh": true
            }
        }, {
            "path": "canvas/canvas-clock",
            "style": {
                "navigationBarTitleText": "Canvas 时钟",
                "enablePullDownRefresh": true
            }
        }, {
            "path": "GradientButton",
            "style": {
                "navigationBarTitleText": "Gradient按钮",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "canvas/TaichiCanvas",
            "style": {
                "navigationBarTitleText": "太极canvas",
                "enablePullDownRefresh": false
            }
        }]
    }],
    "globalStyle": {
        "navigationBarTitleText": "首页",
        "navigationBarBackgroundColor": "#007AFF"
    },
    "tabBar": {
        "color": "#C0C4CC",
        "selectedColor": "#007AFF",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "position": "bottom",
        "list": [{
                "pagePath": "pages/tabBar/Home",
                "text": "首页"
            },
            {
                "pagePath": "pages/tabBar/DemoList",
                "text": "案例列表"
            }
        ]
    },
    "condition": { //模式配置，仅开发期间生效
        "current": 0, //当前激活的模式(list 的索引项)
        "list": [{
            "name": "", //模式名称
            "path": "", //启动页面，必选
            "query": "" //启动参数，在页面的onLoad函数里面得到
        }]
    }
}
